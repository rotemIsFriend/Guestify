<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled State -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Light Gray Background -->
            <corners android:radius="4dp"/>
            <stroke android:width="0dp" android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Enabled State -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent Background -->
            <corners android:radius="4dp"/>
            <stroke android:width="1dp" android:color="#6F6E6E"/> <!-- Gray Border -->
        </shape>
    </item>

</selector>
