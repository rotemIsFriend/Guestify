<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.Fragments.InvitationFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingVertical="25dp"
    android:fillViewport="true">

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Headline: Create Your Digital Invitation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_your_digital_invitation"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/text_primary"/>

        <!-- Sub-headline: Groom's Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/groom_s_name"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            />

        <!-- Groom's Name Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_the_groom_s_name"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:boxStrokeColor="@color/input_border_color"
            app:hintTextColor="@color/primary"
            app:placeholderTextColor="@color/primary"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_groom_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sub-headline: Groom's Parents Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/groom_s_parent_s_name"
            android:textStyle="bold"
            />

        <!-- Groom's Parents Name Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/example_rotem_and_roei_haver"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            app:boxStrokeColor="@color/input_border_color"
            app:hintTextColor="@color/primary"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_groom_p_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColorHint="@color/primary"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sub-headline: Bride's Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bride_s_name"
            android:textStyle="bold"
            />

        <!-- Bride's Name Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_the_bride_s_name"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:boxStrokeColor="@color/input_border_color"
            app:hintTextColor="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_bride_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sub-headline: Bride's Parents Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bride_s_parent_s_name"
            android:textStyle="bold"
            />

        <!-- Bride's Parents Name Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/example_hannan_and_yohevet_fridman"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            app:boxStrokeColor="@color/input_border_color"
            app:hintTextColor="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_bride_p_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sub-headline: Event Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_location"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <!-- Event Location Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_the_event_location"
            app:counterEnabled="true"
            app:counterMaxLength="100"
            app:boxStrokeColor="@color/input_border_color"
            app:hintTextColor="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sub-headline: Venue Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/venue_name"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <!-- Venue Name Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/example_gan_havradim"
            app:counterEnabled="true"
            app:counterMaxLength="100"
            app:boxStrokeColor="@color/input_border_color"
            app:hintTextColor="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_venue_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sub-headline: Expected Number of Guests -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expected_number_of_guests"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <!-- Expected Number of Guests Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/example_350"
            app:counterEnabled="true"
            app:counterMaxLength="5"
            app:boxStrokeColor="@color/input_border_color"
            app:hintTextColor="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_num_of_guests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Button: Select Event Date & Time -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_select_date"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_your_event_date_amp_time"
            app:icon="@drawable/date_icon"
            app:iconGravity="start"
            app:iconTint="@color/text_primary"
            android:padding="10dp"
            android:textColor="@color/text_primary"
            app:cornerRadius="10dp"
            app:iconPadding="10dp"
            android:textStyle="bold" />

        <!-- TextView: Display Selected Date & Time -->
        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="5dp"
            android:textStyle="bold" />

        <!-- Sub-headline: Invitation Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invitation_text"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <!-- Invitation Text Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/this_is_the_main_text_of_your_invitation"
            app:counterEnabled="true"
            app:counterMaxLength="250"
            app:boxStrokeColor="@color/input_border_color"
            app:hintTextColor="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_invitation_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:lines="5" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Button: Submit and Pick a Template -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pick_a_template"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>
</ScrollView>
